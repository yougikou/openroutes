{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "noEmit": true,
    "strict": false,
    "allowJs": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
